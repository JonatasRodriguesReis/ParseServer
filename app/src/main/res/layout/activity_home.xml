<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qualidade.lg.parseserver.HomeActivity">

    <TextView
        android:id="@+id/txtPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginTop="32dp"
        android:text="Post" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtPost"
        android:layout_below="@+id/txtPost"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="26dp"
        android:text="Title" />

    <EditText
        android:id="@+id/edtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edtContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="textPersonName"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edtTitle"
        android:layout_below="@+id/edtTitle"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="12dp"
        android:text="Content" />

    <Button
        android:id="@+id/btnPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edtContent"
        android:layout_below="@+id/edtContent"
        android:layout_marginTop="17dp"
        android:textColor="#FFFFFF"
        android:onClick="postIn"
        android:background="@color/colorPrimary"
        android:text="Post In" />

    <Button
        android:id="@+id/btnPesquisar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnPost"
        android:layout_alignEnd="@+id/edtContent"
        android:textColor="#FFFFFF"
        android:onClick="pesquisar"
        android:background="@color/colorPrimary"
        android:text="Search" />

    <Button
        android:id="@+id/btnComent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnPost"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_toEndOf="@+id/textView3"
        android:textColor="#FFFFFF"
        android:onClick="coment"
        android:background="@color/colorPrimary"
        android:text="Coment" />
</RelativeLayout>
